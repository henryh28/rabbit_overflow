<div class="show_single_question">
  <a class="title"><%= @question.title %></a><br>
  <a class="content"><%= @question.content %></a>
</div>

<% if current_user %>
  <fieldset>
    <legend><h3>Submit Answer</h3></legend>
    <div class="submit_answer">
      <%= form_for :answer, url: answers_path do |answer| %>
        <%= answer.text_area :content, size: "50x15" %><br>
        <%= answer.hidden_field( :question_id, :value => @question.id) %>
        <%= answer.submit "Submit answer" %>
      <% end %>
    </div>
  </fieldset>
<% end %>
<br>

<div class="all_answers">
  <% @answers.each do |answer| %>
     <div class="votes">Votes: </div>
     <div class="answer"><%= simple_format answer.content %></div>
     <div class="author"><%= answer.author %></div>
     <br>
  <% end %>
</div>
