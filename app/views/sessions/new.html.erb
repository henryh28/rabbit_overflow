<header><h1>Login</h1></header>
<%= form_for :login, url: sessions_path do |login| %>
  <%= login.label :username %>
  <%= login.text_field :username %>

  <%= login.label :password %>
  <%= login.password_field :password %>
  <%= login.submit "Login" %>
<% end %>

<% if flash[:error] %>
  <div class="notice">
  <%= flash[:error] %>
  </div>
<% end %>
